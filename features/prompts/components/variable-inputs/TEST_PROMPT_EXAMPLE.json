{
  "name": "Variable Components Test Prompt",
  "description": "Test prompt demonstrating all custom variable component types",
  "messages": [
    {
      "role": "system",
      "content": "You are a helpful assistant processing user inputs."
    },
    {
      "role": "user",
      "content": "Please process the following information:\n\nEnabled: {{enabled}}\nPriority: {{priority}}\nCategories: {{categories}}\nStatus: {{status}}\nQuantity: {{quantity}}\nDescription: {{description}}"
    }
  ],
  "variableDefaults": [
    {
      "name": "enabled",
      "defaultValue": "Yes",
      "customComponent": {
        "type": "toggle",
        "toggleValues": ["No", "Yes"]
      }
    },
    {
      "name": "priority",
      "defaultValue": "Medium",
      "customComponent": {
        "type": "radio",
        "options": ["Low", "Medium", "High", "Critical"]
      }
    },
    {
      "name": "categories",
      "defaultValue": "Development\nTesting",
      "customComponent": {
        "type": "checkbox",
        "options": ["Development", "Testing", "Documentation", "Design", "Deployment"]
      }
    },
    {
      "name": "status",
      "defaultValue": "In Progress",
      "customComponent": {
        "type": "select",
        "options": ["Not Started", "In Progress", "Review", "Completed", "Blocked"]
      }
    },
    {
      "name": "quantity",
      "defaultValue": "5",
      "customComponent": {
        "type": "number",
        "min": 1,
        "max": 100,
        "step": 5
      }
    },
    {
      "name": "description",
      "defaultValue": "This is a test description with multiple lines.\n\nIt can contain detailed information.",
      "customComponent": {
        "type": "textarea"
      }
    }
  ],
  "settings": {
    "model_id": "anthropic/claude-3.5-sonnet",
    "temperature": 0.7,
    "max_tokens": 1000
  }
}

