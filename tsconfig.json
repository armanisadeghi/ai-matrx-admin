{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "target": "es2018",
        "allowJs": true,
        "types": ["lodash"],
        "skipLibCheck": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"],
            "@components/ui/*": ["./components/ui/*"],
            "@components/*": ["./components/*"],
            "/*": ["public/*"]
        },
        "incremental": true,
        "isolatedModules": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "strict": false,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": false,
        "allowUnreachableCode": false,
        "noErrorTruncation": true,
        "strictFunctionTypes": false,
        "strictBindCallApply": false,
        "strictPropertyInitialization": false,
        "noImplicitThis": false,
        "alwaysStrict": false,
        "forceConsistentCasingInFileNames": false
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "tests/**/*",
        "scripts/**/*",
        "node_modules/flowbite-react/lib/esm/index.d.ts",
        "global.d.ts",
        "cartesia.d.ts",
        "components/FileManager/FilePreview/pdf-preview/PDFPreview.tsx",
        "features/rich-text-editor/utils/PatternUtilsOLD.ts",
        "app/(authenticated)/demo/component-demo/json-again/grok",
        "components/socket/form-builder/DynamicFormBackUp.tsx",
        "features/scraper/utils/json-path-navigation-util.ts"
, "components/matrx/buttons/InlineCopyButtonGoogle.tsx"    ],
    "exclude": ["node_modules", "_armani", "_dev"],
    "ts-node": {
        "require": ["tsconfig-paths/register"],
        "transpileOnly": true,
        "compilerOptions": {
            "types": ["lodash", "node"],
            "lib": ["dom", "dom.iterable", "esnext"],
            "module": "commonjs",
            "moduleResolution": "node",
            "baseUrl": ".",
            "paths": {
                "@/*": ["./*"],
                "@components/ui/*": ["./components/ui/*"]
            }
        }
    }
}
