pnignore-workspace-root-check=true
strict-peer-dependencies=false
auto-install-peers=true
shamefully-hoist=true
legacy-peer-deps=true
public-hoist-pattern[]=@heroui/*  # Added for HeroUI compatibility

# Silence deprecation warnings
loglevel=error

# Prevent installation of deprecated packages by default
no-deprecated=true

# Enable installation of optional dependencies
optional=true